{
  "name": "realpro-suite",
  "private": true,
  "version": "1.0.0",
  "description": "Plateforme SaaS de gestion de projets immobiliers suisses - Monorepo",
  "author": "Realpro SA <contact@realpro.ch>",
  "license": "PROPRIETARY",
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:ppe": "turbo run dev --filter=@realpro/ppe-admin",
    "dev:promoteur": "turbo run dev --filter=@realpro/promoteur",
    "dev:regie": "turbo run dev --filter=@realpro/regie",
    "dev:shell": "turbo run dev --filter=@realpro/shell",
    "build": "vite build",
    "build:ppe": "turbo run build --filter=@realpro/ppe-admin",
    "build:promoteur": "turbo run build --filter=@realpro/promoteur",
    "build:regie": "turbo run build --filter=@realpro/regie",
    "build:shell": "turbo run build --filter=@realpro/shell",
    "build:all": "turbo run build",
    "lint": "eslint .",
    "lint:all": "turbo run lint",
    "lint:boundaries": "turbo run lint:boundaries",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit -p tsconfig.app.json",
    "typecheck:all": "turbo run typecheck",
    "clean": "rm -rf node_modules/.cache dist .turbo",
    "clean:all": "turbo run clean && rm -rf node_modules",
    "validate": "pnpm lint:boundaries && pnpm typecheck:all"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "@tanstack/react-table": "^8.21.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^10.18.0",
    "i18next": "^23.7.6",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.68.0",
    "react-i18next": "^13.5.0",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.15.4",
    "sonner": "^1.7.4",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
