{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "build:ppe": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:promoteur": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:regie": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:shell": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:ppe": {
      "cache": false,
      "persistent": true
    },
    "dev:promoteur": {
      "cache": false,
      "persistent": true
    },
    "dev:regie": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:boundaries": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
